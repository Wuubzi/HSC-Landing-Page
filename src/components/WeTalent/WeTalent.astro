---
import { useTranslations } from "../../i18n/util";
import { languages } from "../../i18n/ui";
const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(currentLang as keyof typeof languages);
import "./WeTalent.css";
---

<section id="we-talent">
  <div class="wetalent-container">
    <div class="right-section">
      <h1>
        {translateLabels("wetalent.title")}
        <span>{translateLabels("wetalent.title.important")}</span>
      </h1>
      <p>{translateLabels("wetalent.description")}</p>
      <div class="talent-cards-container">
        <div class="first-card wetalent-card">
          <figure class="bg-card">
            <img
              src="/assets/images/wetalent-first-card.png"
              alt={translateLabels("wetalent.first.card.backgroundAlt")}
            />
          </figure>
          <div class="content-container">
            <figure>
              <img
                src="/assets/Icons/wetalent-first-icon.svg"
                alt={translateLabels("wetalent.first.card.iconAlt")}
              />
            </figure>
            <h2>
              {translateLabels("wetalent.first.card.title")}
            </h2>
          </div>
        </div>
        <div class="second-card wetalent-card">
          <figure class="bg-card">
            <img
              src="/assets/images/wetalent-second-card.png"
              alt={translateLabels("wetalent.second.card.backgroundAlt")}
            />
          </figure>
          <div class="content-container">
            <figure>
              <img
                src="/assets/Icons/wetalent-second-icon.svg"
                alt={translateLabels("wetalent.first.card.iconAlt")}
              />
            </figure>
            <h2>
              {translateLabels("wetalent.first.card.title")}
            </h2>
          </div>
        </div>
        <div class="third-card wetalent-card">
          <figure class="bg-card">
            <img
              src="/assets/images/wetalent-third-card.png"
              alt={translateLabels("wetalent.third.card.backgroundAlt")}
            />
          </figure>
          <div class="content-container">
            <figure>
              <img
                src="/assets/Icons/wetalent-third-icon.svg"
                alt={translateLabels("wetalent.third.card.iconAlt")}
              />
            </figure>
            <h2>
              {translateLabels("wetalent.third.card.title")}
            </h2>
          </div>
        </div>
      </div>
    </div>
    <div class="left-section">
      <div class="video-container">
        <div class="video-placeholder">
          <video src="/assets/videos/example.mp4"></video>
        </div>
        <div class="overlay-wrapper">
          <div class="play-overlay" onclick="togglePlay()">
            <div class="ripple-effect ripple-1"></div>
            <div class="ripple-effect ripple-2"></div>
            <div class="ripple-effect ripple-3"></div>
            <div class="play-button"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
